<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:background="@drawable/wave_background2"
    tools:context=".MainActivity2">
    <!-- Ive added a drawable file above for the background style-->

    <!-- Displays the question to the user-->
    <TextView
        android:id="@+id/questionDisplay"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="206dp"
        android:shadowColor="#66e8ec"
        android:shadowRadius="50"
        android:text=""
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Displays the answer to the user-->
    <TextView
        android:id="@+id/answerDisplay"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="205dp"
        android:shadowColor="#66e8ec"
        android:shadowRadius="50"
        android:text=""
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Buttons for the user to select the answer-->
    <Button
        android:id="@+id/trueBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:background="#3562"
        android:text="| TRUE |"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/falseBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerDisplay" />

    <!-- Buttons for the user to select the answer-->
    <Button
        android:id="@+id/falseBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:background="#3562"
        android:text="| FALSE |"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trueBtn"
        app:layout_constraintTop_toBottomOf="@+id/answerDisplay" />

    <!-- Button for the user to go to the next question-->
    <Button
        android:id="@+id/nextQuestionBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="105dp"
        android:background="#3562"
        android:text="| Next Question |"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerDisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>